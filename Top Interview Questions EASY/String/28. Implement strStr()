class Solution:
    def strStr(self, haystack, needle):
        """
        :type haystack: str
        :type needle: str
        :rtype: int
        """
        if needle == '':
            return 0
        position = 0
        len_haystack, len_needle = len(haystack), len(needle)
        while position <= len_haystack - len_needle:
            if haystack[position:position + len_needle] == needle:
                return position
            else:
                position += 1
        return -1
